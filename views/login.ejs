

<section class="card card-form">
  <h2>Login</h2>

  <% if (erro) { %>
    <div class="alerta"><%= erro %></div>
  <% } %>

  <form method="post" action="/login">
    <label>E-mail</label>
    <input type="email" name="email" required />

    <label>Senha</label>
    <input type="password" name="senha" required />

    <button type="submit" class="btn">Entrar</button>
  </form>
</section>

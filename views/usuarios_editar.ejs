<section class="card card-form">
  <h2>Editar Usuário</h2>

  <form method="post" action="/usuarios/editar/<%= usuarioEd.id %>">

    <label>Nome</label>
    <input type="text" name="nome" value="<%= usuarioEd.nome %>" required />

    <label>Email</label>
    <input type="email" name="email" value="<%= usuarioEd.email %>" required />

    <label>Senha (deixe em branco para manter)</label>
    <input type="password" name="senha" />

    <label>Tipo</label>
    <select name="tipo">
      <option value="admin" <%= usuarioEd.tipo === 'admin' ? 'selected' : '' %>>Administrador</option>
      <option value="funcionario" <%= usuarioEd.tipo === 'funcionario' ? 'selected' : '' %>>Funcionário</option>
      <option value="cliente" <%= usuarioEd.tipo === 'cliente' ? 'selected' : '' %>>Cliente</option>
    </select>

    <button type="submit" class="btn">Atualizar</button>
  </form>
</section>

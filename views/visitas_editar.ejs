<section class="card card-form">
  <h2>Editar Visita</h2>

  <form method="post" action="/visitas/editar/<%= visita.id %>">

    <label>Visitante</label>
    <input type="text" name="visitante" value="<%= visita.visitante %>" required />

    <label>Idoso visitado</label>
    <input type="text" name="idoso" value="<%= visita.idoso %>" required />

    <label>Data da Visita</label>
    <input type="date" name="data_visita" value="<%= visita.data_visita ? visita.data_visita.toISOString().slice(0,10) : '' %>" />

    <label>Horário</label>
    <input type="text" name="horario" value="<%= visita.horario %>" />

    <label>Observações</label>
    <textarea name="observacoes" rows="3"><%= visita.observacoes %></textarea>

    <button type="submit" class="btn">Atualizar</button>
  </form>
</section>
